<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_padding_10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_recipe_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_poster_image_view_250dp"
            android:layout_gravity="center"
            android:background="@color/colorTransparentGrey"
            android:contentDescription="@string/RecipePosterImage"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_servings"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@color/colorTransparentGrey"
            android:drawableStart="@drawable/ic_fork_icon"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:textColor="@color/colorWhite" />


        <TextView
            android:id="@+id/tv_recipe_name"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorTransparentGrey"
            android:gravity="center"
            android:padding="@dimen/padding_3dp"
            android:textColor="@color/colorWhite" />

    </FrameLayout>
</android.support.v7.widget.CardView>